// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  login    String @unique
  passwordHash String
  role     Roles  @default(EXPERT_ON_DUTY)

  @@map("users")
}

enum Roles {
  ADMIN
  HEAD_OF_EXPERT_SERVICE
  DEPUTY_HEAD_OF_EXPERT_SERVICE
  CHIEF_OF_DUTY_DEPARTMENT
  EXPERT_ON_DUTY
  EXPERT_BIOLOGIST
  EXPERT_BALLISTIC
  EXPERT_FINGERPRINT
}
